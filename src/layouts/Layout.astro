---
interface LayoutProps {
  title: string;
}

const { title } = Astro.props;

import NavBar from '@components/Layouts/NavBar.astro';
import UpTopPage from '@components/buttons/UpTopPage.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="shortcut icon" href="/images/favicon-32x32.png" type="image/x-icon" />
  </head>
  <body>
    <NavBar />
    <slot />
    <UpTopPage />
    <!-- Queda pendiente el Footer debido a algunas incompatibilidades -->
  </body>
</html>

<style>
  body {
    position: relative;
  }
</style>
