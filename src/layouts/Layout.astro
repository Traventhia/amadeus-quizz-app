---
interface LayoutProps {
  title: string;
}

const { title } = Astro.props;

import Bienvenida from '@components/bienvenida/Bienvenida.astro';
import NavBar from '@components/Layouts/NavBar.astro';
import Slider from '@components/Layouts/Slider.astro';
import Testimonios from '@components/testimonios/Testimonios.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="shortcut icon" href="/images/favicon-32x32.png" type="image/x-icon" />
  </head>
  <body>
    <NavBar />
    <Slider />
    <Bienvenida />
    <Testimonios />
  </body>
</html>
